<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MES">

    <RelativeLayout
        android:id="@+id/dr_dipu_muni"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="4dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/min_img"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/minister_dipu_muni" />

        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/min_img"
            android:gravity="center"
            android:text="ডা: দীপু মনি, এমপি" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/min_img"
            android:gravity="center"
            android:text="গণপ্রজাতন্ত্রী বাংলাদেশ সরকারের প্রথমনারী শিক্ষা মন্ত্রী।"
            android:textColor="#055B93" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/upomontri_id"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/dr_dipu_muni"
        android:layout_margin="4dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/proti_montri_img"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/upomontri" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proti_montri_img"
            android:gravity="center"
            android:text="মহিবুল হাসান চৌধুরী"
            android:textSize="12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/proti_montri_img"
            android:gravity="center"
            android:text="উপমন্ত্রী শিক্ষা মন্ত্রনালয়, গণপ্রজাতন্ত্রী বাংলাদেশ"
            android:textColor="#055B93" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/shochib_id"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/upomontri_id"
        android:layout_margin="4dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/shochib_img"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/shochib" />

        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shochib_img"
            android:gravity="center"
            android:text="মোঃ মাহবুব হোসেন" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/shochib_img"
            android:gravity="center"
            android:text="২০১৯ তারিখে মাধ্যমিক ও উচ্চ শিক্ষা বিভাগের সচিব হিসাবে যোগদান করেছেন।"
            android:textColor="#055B93" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/gid_layout_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/adView"
        android:background="#B1B1B1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_margin="4dp"
            android:id="@+id/teacher_section_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#595959"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Total Teacher"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Male Teacher"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="female Teacher"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Present "
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Absent"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_margin="4dp"
            android:id="@+id/student_section_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF6161"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Total Student"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Male Student "
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Female Student"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Present "
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Absent"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

</RelativeLayout>